<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.FlashScreen.flashservice.InnnerClass.AssignScreen">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/orange"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:id="@+id/place_dets"
                android:text="Assign Service"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/toolbars"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            >
            <LinearLayout
                android:weightSum="2"
                android:id="@+id/tabs"

                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Order Id: 734"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:id="@+id/v_order" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="2"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:text="01/01/1991"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_height="match_parent"
                        android:id="@+id/v_date" />
                    <TextView
                        android:layout_width="match_parent"
                        android:text="11:00:00"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_height="match_parent"
                        android:id="@+id/v_time" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:weightSum="3"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_width="match_parent"
                    android:text="Requirement"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="16dp"
                    android:textColor="@color/red"
                    android:layout_height="40dp"
                    android:id="@+id/vieww" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:weightSum="2"
                      android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text="Repair"
                        android:textStyle="bold"
                        android:id="@+id/v_work"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_height="match_parent" />
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text="ddd"
                        android:id="@+id/v_workk"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Area"
                android:layout_gravity="center"
                android:gravity="center|left"
                android:padding="10dp"
                android:layout_weight="2"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:id="@+id/area" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/blue"></View>
            <LinearLayout
                android:weightSum="3"
                android:id="@+id/linear_assign"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <TextView

                    android:layout_width="match_parent"
                    android:text="ASSIGNED"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textColor="@color/Green"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:textStyle="bold"
                        android:id="@+id/assigned_name"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_height="match_parent" />
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/assigned_phone"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/grey"></View>

            <LinearLayout
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Available Plumber"
                    android:textStyle="bold"
                    android:background="@color/Amber"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:layout_height="50dp"
                    android:id="@+id/worker" />
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_gravity="center|left"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:id="@+id/selection" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="3"
                android:backgroundTint="@color/grey"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <TextView

                    android:layout_width="match_parent"
                    android:text="ASSIGN"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:textColor="@color/blue"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:weightSum="4"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:textStyle="bold"
                        android:id="@+id/assign_name"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="18dp"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:layout_height="40dp" />
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/assign_phone"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_height="30dp" />
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/assign_email"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_height="30dp" />
                    <TextView
                        android:background="@drawable/box"
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:text=""
                        android:id="@+id/assigned_city"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="5dp"
        android:id="@+id/unassign_linear"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:text="Assign"
            android:textStyle="bold"
            android:background="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:id="@+id/submit_assign" />
        <TextView
            android:layout_width="match_parent"
            android:text="CANCEL"
            android:background="@color/red"
            android:layout_gravity="center|left"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:id="@+id/cancel_assign" />
    </LinearLayout>
</RelativeLayout>
