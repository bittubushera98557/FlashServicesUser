<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:id="@+id/place_dets"
                android:text="Help And Support"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_gravity="center|left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/IMAGEE"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="190dp">
        <ImageView android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/IMAGE"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/IMAGEE"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="70">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:text="Have any query ? Contact us "
   android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="18dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#FFA9A6A6"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_call"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <ImageView
                android:layout_width="0dp"
             android:padding="5dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:src="@drawable/call_new" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:text="Call"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
              android:tint="@color/colorPrimaryDark"
                android:layout_weight="3"
                android:src="@drawable/next_arrow" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#FFA9A6A6"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <ImageView
                android:layout_width="0dp"
                android:padding="5dp"
                android:layout_height="match_parent"
   android:layout_weight="15"
                android:src="@drawable/email_new" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:gravity="center_vertical"
                android:text="Email"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/next_arrow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="#FFA9A6A6"></LinearLayout>

        <LinearLayout
            android:id="@+id/ll_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <ImageView
                android:layout_width="0dp"
          android:tint="@color/white"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                app:srcCompat="@drawable/ic_whatsapp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:gravity="center_vertical"
         android:text="Whatsapp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="0dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/next_arrow" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
