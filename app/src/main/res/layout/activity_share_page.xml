<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
        <TextView
            android:id="@+id/place_dets"
            android:text="Follow Us On"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|left"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/IMAGEE"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="190dp">
        <ImageView android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/IMAGE"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:textColor="@color/Cherry_color"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Follow us on"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/IMAGEE"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
               android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/youtube_link"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/circular"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_youtube" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                 android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/facebook_link"
                    android:background="@drawable/circular"
                    android:layout_marginTop="2dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_fb" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_send_mail"
                    android:padding="10dp"
                    android:background="@drawable/circular"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_email" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/share_contact"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/twitter_link"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/circular"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/logo_twit" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
